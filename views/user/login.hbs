<section>
  <h2>Login</h2>
  <br>
  {{#if error}}
    <p class="error">{{error}}</p>
  {{/if}}
  <div class="spacer">
      <form method="POST">
          <label>Email:</label>
          <input type="text" name="email" value="{{userData.email}}">
          <label>Password:</label>
          <input type="password" name="password">
          <input type="submit" value="Login">
      </form>
  </div>
</section>