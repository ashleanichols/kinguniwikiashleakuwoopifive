<section>
  <h2>Create new article</h2>
  {{#if error}}
    <p class="error">{{error}}</p>
  {{/if}}
  <div class="spacer">
      <form method="POST">
          <label>Article title</label>
          <input type="text" class="title" name="title" value="{{title}}">
          <label>Content</label>
          <textarea name="content">{{content}}</textarea>
          <input type="submit" value="Submit">
      </form>
  </div>
</section>