<section>
  <h2>Edit article
    {{#if admin}}
      <div class="controls">
        {{#if lockedStatus}}
          <a href="/admin/article/unlock/{{id}}">Unlock article</a>
        {{else}}
          <a href="/admin/article/lock/{{id}}">Lock article</a>
        {{/if}}
      </div>
    {{/if}}
  </h2>
  {{#if error}}
    <p class="error">{{error}}</p>
  {{else}}
  <div class="spacer">
      <form method="POST">
          <label>Article title</label>
          <h3>{{title}}</h3>
          <label>Content</label>
          <textarea name="content">
            {{content}}
          </textarea>
          <input type="submit" value="Submit">
      </form>
  </div>
  {{/if}}
</section>